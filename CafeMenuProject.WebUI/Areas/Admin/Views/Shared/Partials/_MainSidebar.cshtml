@{
    var currentUser = AuthHelper.GetCurrentUser();
}

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="index3.html" class="brand-link">
        <img src="~/Content/adminlte/dist/img/logo.png" alt="Cafe Menu App Logo" class="brand-image elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Cafe Menu App</span>
    </a>

    <div class="sidebar">
        @if (currentUser != null)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/Content/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">@currentUser.Value.fullName</a>
                </div>
            </div>
         }

        <nav class="mt-2">
            @Html.Partial("Partials/_NavSidebar")
        </nav>
    </div>
</aside>
