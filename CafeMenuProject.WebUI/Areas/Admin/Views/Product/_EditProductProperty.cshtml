@model EditProductPropertyModel

@Html.HiddenFor(x => x.ProductPropertyId)

<div class="form-group">
    @Html.LabelFor(x => x.Key, "Özellik Adı (Key)", htmlAttributes: new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Key, new { @class = "form-control", placeholder = "Key" })
    @Html.ValidationMessageFor(x => x.Key, "", new { @class = "text-danger" })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Value, "Özellik Değeri (Value)", htmlAttributes: new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Value, new { @class = "form-control", placeholder = "Value" })
    @Html.ValidationMessageFor(x => x.Value, "", new { @class = "text-danger" })
</div>
