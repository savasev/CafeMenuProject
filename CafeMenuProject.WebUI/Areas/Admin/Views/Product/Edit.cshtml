@model EditProductModel

@{
    ViewBag.Title = "Ürün Düzenle";
}

<div class="content-header clearfix">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewBag.Title</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="@Url.Action("List", "Product", new { area = "Admin" })" class="btn btn-primary">
                    <i class="fas fa-square-plus"></i> Tüm Ürünler
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @Html.Partial("_EditProductCard", Model)

        @Html.Partial("_EditProductPropertyCard", Model)
    </div>
</section>

@Html.Partial("_CreateProductPropertyModal", Model)

@Html.Partial("_EditProductPropertyModal")

@section scripts {
    <script>
        $(function () {
            var table = $('#productproperties-datatable').DataTable({
                processing: true,
                serverSide: true,
                ordering: false,
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                searching: false,
                pageLength: '@Model.ProductPropertySearchModel.PageSize',
                ajax: {
                    url: '@Url.Action("ProductPropertyList", "Product")',
                    type: 'POST',
                    data: function (d) {
                        return {
                            Draw: d.draw,
                            PageIndex: Math.floor(d.start / d.length),
                            PageSize: d.length,
                            ProductId: '@Model.ProductId',
                        };
                    }
                },
                columns: [
                    {
                        data: 'productPropertyId',
                        width: '5%',
                        className: 'text-center'
                    },
                    {
                        data: 'key'
                    },
                    {
                        data: 'value',
                    },
                    {
                        data: null,
                        width: '15%',
                        className: 'text-center',
                        render: function (data, type, row) {
                            return `<button type="button" class='btn btn-primary btn-sm edit-btn' data-id="${row.productPropertyId}">Düzenle</button>
                                    <button type="button" class="btn btn-danger btn-sm delete-btn" data-id="${row.productPropertyId}">Sil</button>`;
                        }
                    }
                ],
            });

            $('#search-productproperties').on('click', function () {
                table.ajax.reload();
            });

            $('#productproperties-datatable').on('click', '.delete-btn', function () {

                var id = $(this).data('id');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kaydı silmek istediğinize emin misiniz?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {

                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/Product/DeleteProductProperty/' + id,
                            type: 'POST',
                            success: function (res) {
                                if (res.success) {
                                    $(document).Toasts('create', {
                                        class: 'bg-success',
                                        title: 'Başarılı',
                                        body: 'Ürün özelliği başarıyla silindi.'
                                    });

                                    table.ajax.reload();

                                } else {
                                    var message = res.message || 'Silme işlemi başarısız oldu.';

                                    $(document).Toasts('create', {
                                        class: 'bg-danger',
                                        title: 'Hata',
                                        body: message,
                                    });
                                }
                            },
                            error: function () {
                                $(document).Toasts('create', {
                                    class: 'bg-danger',
                                    title: 'Hata',
                                    subtitle: '',
                                    body: 'Silme işlemi başarısız oldu.'
                                });
                            }
                        });
                    }
                });
            });

            $('#productproperties-datatable').on('click', '.edit-btn', function () {

                var id = $(this).data('id');

                $.ajax({
                    url: '/Admin/Product/ProductProperty/' + id,
                    type: 'GET',
                    success: function (res) {
                        if (res.success) {

                            $('#modal-edit-product-property .modal-body').html(res.html);
                            $('#modal-edit-product-property').modal('show');

                        } else {
                            var message = res.message || 'İşlem başarısız oldu.';

                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                title: 'Hata',
                                body: message,
                            });
                        }
                    },
                    error: function () {
                        $(document).Toasts('create', {
                            class: 'bg-danger',
                            title: 'Hata',
                            subtitle: '',
                            body: 'İşlem başarısız oldu.'
                        });
                    }
                });
            });

            $('#createProductPropertyModalSaveBtn').on('click', function () {
                var btn = $(this);

                btn.prop('disabled', true);
                btn.text('Kaydediliyor...');

                $.ajax({
                    url: '@Url.Action("CreateProductProperty", "Product")',
                    type: 'POST',
                    data: {
                        ProductId: '@Model.ProductId',
                        Key: $('#@Html.IdFor(x => x.CreateProductPropertyModel.Key)').val(),
                        Value: $('#@Html.IdFor(x => x.CreateProductPropertyModel.Value)').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#modal-create-product-property').modal('hide');

                            table.ajax.reload();

                            $(document).Toasts('create', {
                                class: 'bg-success',
                                title: 'Başarılı',
                                body: 'Özellik başarıyla eklendi.'
                            });
                        } else {
                            var message = response.message || 'Özellik ekleme işlemi başarısız oldu.';
                            $(document).Toasts('create', {
                                class: 'bg-danger',
                                title: 'Hata',
                                body: message,
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    },
                    complete: function () {
                        btn.prop('disabled', false);
                        btn.text('Kaydet');
                    }
                });
            });

            $('#modal-create-product-property').on('hide.bs.modal', function () {
                $('#@Html.IdFor(x => x.CreateProductPropertyModel.Key)').val('');
                $('#@Html.IdFor(x => x.CreateProductPropertyModel.Value)').val('');
            });
        });
    </script>
}
