@model UserRegisterModel

@{
    ViewBag.Title = "Register";
}

<main class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg border-0 rounded-3" style="width: 400px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Sign Up</h3>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control w-100", @placeholder = "Adınız" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Surname, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control w-100", @placeholder = "Soyadınız" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control w-100", @placeholder = "Kullanıcı Adınız" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control w-100", @placeholder = "Şifreniz" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </div>
            }
        </div>
    </div>
</main>
